generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// ...ต่อจากข้างบน...

model Transaction {
  id          Int      @id @default(autoincrement()) // รหัสรายการ รันเลขเอง 1, 2, 3...
  title       String   // ชื่อรายการ เช่น "ค่ากาแฟ"
  amount      Float    // จำนวนเงิน
  type        String   // ประเภท: เก็บคำว่า 'INCOME' หรือ 'EXPENSE'
  date        DateTime @default(now()) // วันที่บันทึก (ตั้งค่าให้อัตโนมัติเป็นเวลาปัจจุบัน)
}
